# Variables de entorno para desarrollo local
# Copia este archivo como .env.local y completa las variables

# Base de datos
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/pazanimal_dev"

# NextAuth.js
NEXTAUTH_SECRET="desarrollo-secret-cambiar-en-produccion"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Redis (para cache)
REDIS_URL="redis://localhost:6379"

# MercadoPago (IMPLEMENTADO EN SPRINT 3)
# Obtener de: https://www.mercadopago.com.ar/developers/panel/credentials
MERCADOPAGO_ACCESS_TOKEN="TEST-tu-access-token-aqui"  # Usar TEST- para desarrollo, PROD- para producción
MERCADOPAGO_WEBHOOK_SECRET="tu-webhook-secret-aqui"   # Opcional, para validar webhooks

# Email/SMTP (para cuando se implemente)
SMTP_HOST=""
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""

# Storage (para cuando se implemente)
S3_BUCKET=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_REGION="us-east-1"

# Observabilidad (opcional)
LOGTAIL_TOKEN=""

# Variables específicas para Docker
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
POSTGRES_DB="pazanimal_dev"
